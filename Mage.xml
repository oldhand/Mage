	<Frame name="MageMainFrame" frameStrata="FULLSCREEN_DIALOG" parent="UIParent" toplevel="true">
	 	<Size>
			<AbsDimension x="26" y="26"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="UIParent" relativePoint="TOPLEFT">
			<Offset>
				<AbsDimension x="0" y="0"/>
			</Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer>
				<Texture>
					<Color a="1" r="1" g="0" b="0" />
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Frame name="MageColorFrame">
				<Size>
					<AbsDimension x="26" y="26"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="MageMainFrame" relativePoint="TOPLEFT">
					<Offset>
						<AbsDimension x="6" y="0"/>
					</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer>
						<Texture name="MageCastColor">
							<Color a="1" r="0" g="0" b="0" />
						</Texture>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad>
				Mage_RegisterEvents(self);
			</OnLoad>
			<OnUpdate>
				Mage_Frame_OnUpdate();
			</OnUpdate>
			<OnEvent> 
				Mage_OnEvent(event, arg1, arg2, arg3);
			</OnEvent>
		</Scripts>
	</Frame>
	<!-- COLORs FRAME -->  
	<Button name="Mage_MSG_Frame"  frameStrata="LOW" movable="true">
		<Size>
			<AbsDimension x="220" y="21"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="MageMainFrame" relativePoint="TOPRIGHT">
				<Offset>
					<AbsDimension x="10" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="Mage_MSG_Text" inherits="GameFontNormalSmall" justifyH="LEFT" text="" virtual="true">
					<Size>
						<AbsDimension x="116" y="16"/>
					</Size>
					<Anchors>
						<Anchor point="LEFT">
							<Offset x="0" y="0"/>
						</Anchor>
					</Anchors>
					<FontHeight>
						<AbsValue val="13"/>
					</FontHeight>
					<Color r="1" g="1" b="1"/>			
				</FontString>
			</Layer>		
		</Layers>	 
	</Button>



<CheckButton name="MageFollowBtn" frameStrata="FULLSCREEN_DIALOG">
	<Size>
		<AbsDimension x="21" y="21"/>
	</Size>
	<Anchors>
		<Anchor point="TOPLEFT" relativeTo="Mage_MSG_Frame" relativePoint="TOPRIGHT">
			<Offset>
				<AbsDimension x="50" y="0"/>
			</Offset>
		</Anchor>
	</Anchors>
	<Color r="0" g="0" b="0" a="0"/>
	<NormalTexture file="Interface\Icons\Inv_Misc_QuestionMark"/>
	<CheckedTexture file="Interface\Icons\Ability_mount_dreadsteed"/>
	<HighlightTexture alphaMode="ADD" file="Interface\QuestFrame\UI-QuestTitleHighlight"/>
	<Scripts>
		<OnLoad>
			Mage_Auto_Follow_OnLoad(self);
		</OnLoad>
		<OnEvent>
			Mage_Auto_Follow_OnEvent(self, event, arg1, arg2);
		</OnEvent>
		<onClick>
			Mage_Auto_Follow_fun();
		</onClick>
		<OnEnter>
			GameTooltip:SetOwner(self, "ANCHOR_TOPLEFT");
			GameTooltip:SetText(Mage_Auto_Follow_Hit);
			GameTooltip:Show();
		</OnEnter>
		<OnLeave>
			GameTooltip:Hide();
		</OnLeave>
		<OnUpdate>
			Mage_Auto_Follow_OnUpdate();
		</OnUpdate>		
	</Scripts>
</CheckButton>

