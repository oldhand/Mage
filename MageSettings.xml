<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Script file="MageSettings.lua"/>

	<Frame name="MageSettings" toplevel="true" movable="true" enableMouse="true" parent="UIParent" hidden="true" inherits="BackdropTemplate" clampedToScreen="true">
		<Size>
			<AbsDimension x="300" y="180"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Scripts>
			<OnLoad inherit="prepend">
				self:RegisterForDrag("LeftButton");
				local backdropInfo = {
				bgFile		= "Interface\\DialogFrame\\UI-DialogBox-Background",
				edgeFile	= "Interface\\Glues\\Common\\TextPanel-Border",
				tile 		= true,
				tileEdge	= true,
				}
				self:SetBackdrop(backdropInfo);
			</OnLoad>
		</Scripts>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="$parentHeader" file="Interface\DialogFrame\UI-DialogBox-Header">
					<Size>
						<AbsDimension x="256" y="64"/>
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="14"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
				<FontString name="$parentTitle" inherits="GameFontNormal">
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>	
		<Scripts>
			<OnShow>
				getglobal(self:GetName().."Title"):SetText("设置");
			</OnShow>
		</Scripts>
		<Frames>
			<CheckButton name="$parentMainTank" inherits="UICheckButtonTemplate">
				<Size><AbsDimension x="24" y="24"/></Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="15" y="-50"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parentLbL" inherits="GameFontNormalSmall" text="">
							<Anchors>
								<Anchor point="LEFT">
									<Offset><AbsDimension x="25" y="0"/></Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnShow>
						getglobal(self:GetName().."LbL"):SetText("设置主坦克");
					</OnShow>
					<onClick>
						Mage_Setting_onClick("MainTank");
					</onClick>
				</Scripts>
			</CheckButton>
			<Button name="$parentSelectMainTank" inherits="GameMenuButtonTemplate" text="选择坦克">
				<Size>
					<AbsDimension x="120" y="30"/>
				</Size>
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentMainTank" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="150" y="15"/></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						 Mage_SelectMainTank_onClick();
					</OnClick>
					<OnEnter>
						Mage_SelectMainTank_OnEnter();
					</OnEnter>
					<OnLeave>
						MageSettingsTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Button>
			<CheckButton name="$parentAllDispel" inherits="UICheckButtonTemplate">
				<Size><AbsDimension x="24" y="24"/></Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentMainTank" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="0" y="-2"/></Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parentLbL" inherits="GameFontNormalSmall" text="">
							<Anchors>
								<Anchor point="LEFT">
									<Offset><AbsDimension x="25" y="0"/></Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnShow>
						getglobal(self:GetName().."LbL"):SetText("自动驱散");
					</OnShow>
					<OnClick>
						  Mage_Setting_onClick("AllDispel");
					</OnClick>
				</Scripts>
			</CheckButton>

			<Button name="$parentCloseButton" inherits="UIPanelButtonTemplate" text="关闭">
                <Size>
                    <AbsDimension x="80" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentAllDispel" relativePoint="BOTTOMLEFT">
                      	<Offset><AbsDimension x="100" y="-2"/></Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                       getglobal("MageSettings"):Hide();
                    </OnClick>
                </Scripts>
            </Button>
		</Frames>
	</Frame>

	<GameTooltip name="MageSettingsTooltip" inherits="GameTooltipTemplate" parent="UIParent" hidden="true">
		<Scripts>
			<OnLoad>
				self:SetOwner(UIParent, "ANCHOR_NONE")
			</OnLoad>
		</Scripts>
	</GameTooltip>
</Ui>